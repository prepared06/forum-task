@{
}
<form asp-controller="Data" asp-action="AddPost" method="post">
    <div class="d-flex flex-column col-4">
        <label asp-for=@Model.Post.Title></label>
        <input asp-for=@Model.Post.Title class="m-2"/>

        <label asp-for=@Model.Post.Theme.ThemeName></label>
        <input asp-for=@Model.Post.Theme.ThemeName class="m-2"/>

        <label asp-for=@Model.Post.Text></label>
        <textarea asp-for=@Model.Post.Text class="m-2" rows="14"></textarea>
        <input type="submit" value="Save"/>
    </div>  
</form>