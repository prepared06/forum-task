<form asp-controller="Data" asp-action="Change" method="post">
    <input type="hidden" asp-for=@Model.Id />
    <input type="hidden" asp-for=@Model.Theme.Id />
    <div class="d-flex flex-column col-4">
        <label asp-for=@Model.Title></label>
        <input asp-for=@Model.Title class="m-2"/>

        <label asp-for=@Model.Theme.ThemeName></label>
        <input asp-for=@Model.Theme.ThemeName class="m-2"/>

        <label asp-for=@Model.Text></label>
        <textarea asp-for=@Model.Text class="m-2" rows="14"></textarea>
        <input type="submit" value="Save"/>
    </div>  
</form>
